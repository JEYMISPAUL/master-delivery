@using Microsoft.AspNetCore.Identity;
@using System.Security.Claims;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Delivery</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Delivery.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <!--Lado derecho-->
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <i class="fa-solid fa-truck"></i> Delivery</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div>

                <!--Lado izquierdo-->
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="d-flex">
                        <ul class="navbar-nav flex-grow-1">

                            <li class="nav-item">
                                <a class="nav-link link-secondary" asp-controller="Usuario" asp-action="EditarDatos">
                                    <i class="fa-solid fa-user"></i>
                                    <strong> Bienvenido </strong> @User.FindFirst("Nombre").Value @User.FindFirst("Apellido").Value 
                                    <p style="color:green" class="d-inline" >(@User.FindFirst(ClaimTypes.Role).Value)</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-danger" asp-area="" asp-controller="Usuario" asp-action="Salir">Salir</a>
                            </li>
                        </ul>
                    </div>
                }
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="d-flex">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="btn btn-success" asp-area="" asp-controller="Usuario" asp-action="Login">Iniciar sesión</a>
                                <a class="btn btn-primary" asp-area="" asp-controller="Usuario" asp-action="Register">Registrate</a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/a856d5cc62.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
